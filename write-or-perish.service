[Unit]
Description=Write or Perish Gunicorn Application
After=network.target

[Service]
Type=forking
User=hrosspet
Group=hrosspet
WorkingDirectory=/home/hrosspet/write-or-perish
Environment="PATH=/home/hrosspet/write-or-perish/venv/bin"
EnvironmentFile=/home/hrosspet/write-or-perish/.env.production
PIDFile=/home/hrosspet/write-or-perish/gunicorn.pid

ExecStart=/home/hrosspet/write-or-perish/venv/bin/gunicorn \
    -w 4 \
    -b 127.0.0.1:8000 \
    --timeout 900 \
    --daemon \
    --access-logfile /home/hrosspet/write-or-perish/logs/gunicorn-access.log \
    --error-logfile /home/hrosspet/write-or-perish/logs/gunicorn-error.log \
    --pid /home/hrosspet/write-or-perish/gunicorn.pid \
    backend.app:app

ExecReload=/bin/kill -s HUP $MAINPID
ExecStop=/bin/kill -s TERM $MAINPID

Restart=on-failure
RestartSec=10s

[Install]
WantedBy=multi-user.target
